from airflow.decorators import dag, task
from pendulum import datetime

@dag(
    start_date=datetime(2024, 1, 1),
    schedule="@daily",
    catchup=False,
)
def my_first_dag():
    
    @task
    def say_hello():
        print("Hello from Airflow!")
        return "success"
    
    @task
    def say_goodbye(status):
        print(f"Previous task returned: {status}")
        print("Goodbye!")
    
    # Set up dependencies
    result = say_hello()
    say_goodbye(result)

my_first_dag()